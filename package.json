{
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --write src scripts",
    "schema-format": "prisma format",
    "typecheck": "node --max-old-space-size=8192 ./node_modules/.bin/tsc -p tsconfig.notests.json",
    "typecheck-all": "node --max-old-space-size=8192 ./node_modules/.bin/tsc -p tsconfig.json",
    "lint": "eslint src scripts",
    "validate-yaml": "yaml-validator resources/*.yaml",
    "test": "bun test src scripts",
    "checks": "bun run format && bun run schema-format && bun run typecheck && bun run typecheck-all && bun run lint && bun run validate-yaml && bun test",
    "migrate": "prisma migrate dev",
    "tasks": "task-master list --status=pending,in-progress,review,deferred --with-subtasks",
    "run-dev": "bun src/index.ts",
    "prisma-studio": "prisma studio",
    "install-prod": "bun install --production --frozen-lockfile",
    "migrate-prod": "prisma migrate deploy"
  },
  "dependencies": {
    "@langchain/classic": "^1.0.7",
    "@langchain/core": "1.1.8",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/openai": "^1.2.0",
    "@prisma/client": "^6.19.1",
    "@sentry/node": "^10.30.0",
    "@synapsenwerkstatt/prisma-bun-sqlite-adapter": "^1.2.2",
    "cheerio": "^1.1.2",
    "inversify": "^7.10.8",
    "inversify-inject-decorators": "^3.1.0",
    "langchain": "^1.2.3",
    "octokit": "^5.0.5",
    "reflect-metadata": "^0.2.2",
    "telegraf": "^4.16.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "1.3.5",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.7.4",
    "prisma": "^6.19.1",
    "task-master-ai": "^0.40.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "yaml-validator": "^5.1.0"
  }
}
